<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
    <item>
        <layer-list>
            <item
                android:left="5dp"
                android:top="5dp">
                <shape>
                    <corners android:radius="5dp" />
                    <solid android:color="#a6a6a6" />
                </shape>
            </item>
            <item android:bottom="3dp" android:right="3dp">
                <shape>
                    <gradient
                        android:angle="270"
                        android:endColor="@color/buttonQuitkColorSecondary"
                        android:startColor="@color/buttonQuitkColorPrimary" />
                    <stroke
                        android:width="1dp"
                        android:color="#737373" />
                    <corners
                        android:radius="5dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>